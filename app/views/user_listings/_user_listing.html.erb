<div class="card mb-2 mt-2">
  <div class="card-header">
    <div class="row">
      <div class="col-6"><h3 class="m-0 d-inline">
        <%= user_listing.created_at.strftime("%Y/%m/%d") %></h3>
      </div>
      <div class="col-6"><%= button_to "Remove Listing", user_listing, method: :delete, class: "float-end btn btn-danger d-inline", data: { confirm: "Do you really wish to delete this listing?" } %></div>
    </div>    
  </div>
  <div class="card-body">
    <div id="<%= dom_id user_listing %>">
      <% unless user_listing.pending? %>
        <h4><%= user_listing.listing.name %></h4>
      <% end %>
      <p>
        <strong>Url:</strong>
        <%= user_listing.url %>
      </p>
      <% if user_listing.pending? %>
        <div class="alert alert-warning"> 
          <p class="m-0">This listing's information has not yet been fully gathered. It should be ready shortly.</p>
        </div>
      <% end %>
    </div>
  </div>
  <% unless user_listing.pending? %>
    <div class="card-footer">
      <%= link_to "Listing Stats", user_listing, class: "float-end btn btn-success" %>
    </div>
  <% end %>
</div>
